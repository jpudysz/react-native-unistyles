{
  "name": "react-native-unistyles-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "precommit": "bun run --cwd packages/unistyles precommit",
    "lint": "bun run --cwd packages/unistyles lint",
    "test": "bun run --cwd packages/unistyles test",
    "tsc": "bun run --cwd packages/unistyles tsc",
    "check": "bun run --cwd packages/unistyles check",
    "check:ci": "bun run --cwd packages/unistyles check:ci"
  },
  "devDependencies": {
    "husky": "9.1.7"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
